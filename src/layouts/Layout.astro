---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "starter-astro-template" } = Astro.props as Props;
---

<!doctype html>
<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-full flex-col bg-white dark:bg-zinc-900">
    <slot />
  </body>
</html>
